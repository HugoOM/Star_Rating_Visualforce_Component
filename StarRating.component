    <style>
      fieldset,
      label {
        margin: 0;
        padding: 0;
      }

      .rating {
        border: none;
        float: left;
      }

      /* Accessibilty-friendly "hidden" */
      .rating > input {
        position: absolute;
        width: 0;
        height: 0;
        opacity: 0;
      }

      svg {
        width: 36px;
        height: auto;
        fill: transparent;
        stroke: black;
        stroke-width: 36px;
      }

      .rating > label {
        float: right;
        border: 1px solid transparent;
        border-radius: 8px;

        /* Optical alignment - edges of SVG to focus border */
        padding: 5px 4px 4px 4px;
      }

      .rating > input:checked ~ label svg {
        fill: gold;
        stroke: gold;
      }

      /* :focus-visible not available in IE11 */
      .rating > input:focus + label {
        border: 1px solid black;
      }

      /* Match Specificity */
      .rating:hover > input ~ label svg {
        fill: transparent;
        stroke: black;
      }

      .rating > input:hover ~ label svg {
        fill: gold;
        stroke: black;
      }
    </style>
    
